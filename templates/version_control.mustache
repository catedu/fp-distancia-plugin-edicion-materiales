        </div>
        <div class="form-group mx-sm-3 mb-2">
            <select class="custom-select" data-region="select-asofversion">
                {{#versions}}
                    <option value="{{.}}">{{.}}</option>
                {{/versions}}
            </select>
        </div>
        <button class="btn btn-primary mb-2" data-action="createversion" data-courseid="{{ courseid }}" data-resourceid="{{ resourceid }}">
            {{#str}}confirm{{/str}}
        </button>
    </div>
